{{ form_start(form) }}
<div class="col-md-10 mx-auto" style="font-size: 20px;">
    <div class="row">
        <div class="col-6 mx-auto">{{ form_row(form.name) }}</div>
        <div class="col-6 mx-auto">{{ form_row(form.firstName) }}</div>
    </div>

    <div class="row">
        <div class="col-6 mx-auto">{{ form_row(form.address) }}</div>
        <div class="col-6 mx-auto">{{ form_row(form.contact) }}</div>
    </div>

    <div class="row">
        <div class="col-9 mx-auto">{{ form_row(form.speciality) }}</div>
        <div class="col-3 mx-auto"><a href="{{ path('specialty.index') }}" class="btn btn-primary btn-sm">Nouvelle</a></div>
    </div>

    <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}