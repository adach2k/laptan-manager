{% extends 'base.html.twig' %}

{% block title %}Liste de medecins{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h3 class="text-center">Liste de tous les medecins</h3>
        <div class="col-10 mx-auto py-3 bg-white">
            <div class="text-right my-3">
                <a href="{{ path('doctor.new') }}" class="btn btn-success">
                    <i class="fas fa-edit"> Nouveau medecin </i>
                </a>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Specialité</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for doctor in doctors %}
                    <tr>
                        <td>{{ doctor.name }}</td>
                        <td>{{ doctor.firstName }}</td>
                        <td>{{ doctor.speciality.label }}</td>
                        <td class="text-center">
                            <a href="{{ path('doctor.show', {id: doctor.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('doctor.edit', {id: doctor.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}