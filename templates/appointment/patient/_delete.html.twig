<form method="POST" action="{{ path('patient.delete', {id: patient.id}) }}" class="d-inline">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
	<button class="btn btn-danger btn-sm"><i class="fas fa-backspace"></i></button>
</form>
