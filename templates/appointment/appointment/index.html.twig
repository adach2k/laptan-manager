{% extends 'base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
    <div class="container mt-4 mx-auto">
        <div class="col-10 mx-auto py-3 bg-white">
            <h3 class="text-center">Rendez-vous du jour</h3>
            <div class="text-right mb-3">
                <a href="{{ path('appointment.new') }}" class="btn btn-success"><i class="fas fa-edit"> Nouveau Rendez-vous </i></a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Patient</th>
                        <th scope="col">Medecin</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for appointment in appointments %}
                    <tr>
                        <td>{{ appointment.patient.nom }} {{ appointment.patient.prenom}}</td>
                        <td>{{ appointment.medecin.name }} </td>
                        <td>{{ appointment.appointmentAt | date('d/m/Y H:i:s')}}</td>
                        <td class="text-center">
                            <a href="{{ path('appointment.show', {'id': appointment.id}) }}" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('appointment.edit', {id: appointment.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun enreegistrement trouv√©</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}