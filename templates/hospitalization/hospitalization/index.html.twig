{% extends 'base.html.twig' %}

{% block title %}Hospitalization{% endblock %}

{% block body %}
    <div class="container mt-4 bg-white">
        <h3 class="text-center text-primary">Liste d'hospitalisations</h3>

        <div class="col-10 mx-auto my-3">
            <div class="text-right py-3">
                <a href="{{ path('hospitalization.new') }}" class="btn btn-success"> <i class="fas fa-edit"> Nouvelle Hopitalization </i> </a>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Patient</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for hospitalization in hospitalizations %}
                    <tr>
                        <td>{{ hospitalization.patient.nom }} {{ hospitalization.patient.prenom}}</td>
                        <td class="text-center">
                            <a href="{{ path('hospitalization.edit', {id: hospitalization.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('hospitalization.show', {id: hospitalization.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}