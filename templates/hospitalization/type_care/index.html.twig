{% extends 'base.html.twig' %}

{% block title %}Gestion de type de soin{% endblock %}

{% block body %}
    <div class="container mt-4 bg-white">
        <h3 class="text-center text-info">Type soin</h3>
        <div class="col-10 mx-auto my-3">
            <div class="text-right my-3">
                <button class="btn btn-success" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-edit"> Nouvelle type </i> </button>
                <!-- Modal -->
                <div class="modal fade text-left" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Enreistrer une nouvelle type de soin</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ include('hospitalization/type_care/_form.html.twig') }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Libell√©</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.label }}</td>
                        <td class="text-center">
                            <a href="{{ path('type.edit', {id: type.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('type.show', {id: type.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                            {{ include('hospitalization/type_care/_delete.html.twig') }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}