{% extends 'base.html.twig' %}

{% block title %}Personnels{% endblock %}

{% block body %}
    <div class="col-md-10 mx-auto bg-white">
        <h1>Liste de personnel</h1>
        <div class="text-right py-3">
            <a href="{{ path('admin_user_new') }}" class="btn btn-success"><i class="fas fa-edit"> Nouvel Personnel</i></a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>PseudoName</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.tel }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
