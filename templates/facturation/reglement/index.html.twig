{% extends 'base.html.twig' %}

{% block title %}Reglement index{% endblock %}

{% block body %}
    <h3 class="text-center py-3">Liste de reglement</h3>
    <div class="col-md-10 mx-auto bg-white">
        <a href="{{ path('facturation_reglement_new') }}" class="btn btn-success my-3"><i class="fas fa-edit fa-2x">Nouveau réçu</i></a>
        <table class="table">
            <thead>
                <tr>
                    <th>Numéro Réçu</th>
                    <th>Numéro Facture</th>
                    <th>Montant Payé</th>
                    <th>Montant Restant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for reglement in reglements %}
                <tr>
                    <td>{{ reglement.code }}</td>
                    <td>{{ reglement.facture.numero }}</td>
                    <td>{{ reglement.montantPaye }}</td>
                    <td>{{ reglement.montantRestant }}</td>
                    <td>
                        <a href="{{ path('facturation_reglement_show', {'id': reglement.id}) }}" class="btn btn-info"><i class="fas fa-eye">Afficher</i></a>
                        <a href="{{ path('facturation_reglement_edit', {'id': reglement.id}) }}" class="btn btn-success"><i class="fas fa-edit">Regler</i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
