{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <div class="col-md-10 mx-auto py-3">
        <a href="{{ path('facturation_facture_new') }}" class="btn btn-primary my-3"><i class="fas fa-edit fa-2x">Nouvelle facture</i></a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numero</th>
                    <th>MontantTotal</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for facture in factures %}
                <tr>
                    <td>{{ facture.id }}</td>
                    <td>{{ facture.numero }}</td>
                    <td>{{ facture.montantTotal }}</td>
                    <td>
                        <a href="{{ path('facturation_facture_show', {'id': facture.id}) }}" class="btn btn-info"><i class="fas fa-eye">Afficher</i></a>
                        <a href="{{ path('facturation_facture_edit', {'id': facture.id}) }}" class="btn btn-success"><i class="fas fa-edit">Editer</i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
