{% extends 'base.html.twig' %}

{% block title %}Bedroom index{% endblock %}

{% block body %}
    
    <div class="col-md-10 mx-auto py-3">
        <h3 class="text-center text-primary">Liste de salle</h3>

        <div class="text-right py-3">
            <a href="{{ path('place_bedroom_new') }}" class="btn btn-success"><i class="fas fa-edit">Nouvelle salle</i></a>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numero</th>
                    <th class="text-center">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for bedroom in bedrooms %}
                <tr>
                    <td>{{ bedroom.id }}</td>
                    <td>{{ bedroom.numero }}</td>
                    <td class="text-center">
                        <a href="{{ path('place_bedroom_edit', {'id': bedroom.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('place_bedroom_show', {'id': bedroom.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
