{% extends 'base.html.twig' %}

{% block title %}Bed index{% endblock %}

{% block body %}

    <div class="col-md-10 mx-auto py-3">
        <h3 class="text-center text-info">Lit disponible</h3>
        <div class="text-right">
            <a href="{{ path('place_bed_new') }}" class="btn btn-success my-3"><i class="fas fa-edit">Nouveau lit</i></a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numéro Lit</th>
                    <th>Numéro Chambre</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for bed in beds %}
                <tr>
                    <td>{{ bed.id }}</td>
                    <td>{{ bed.numero }}</td>
                    <td>{{ bed.bedroom.numero }}</td>
                    <td class="text-center">
                        <a href="{{ path('place_bed_edit', {'id': bed.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('place_bed_show', {'id': bed.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
