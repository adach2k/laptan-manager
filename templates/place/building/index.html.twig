{% extends 'base.html.twig' %}

{% block title %}Liste Bâtiments{% endblock %}

{% block body %}
    <div class="col-md-10 mx-auto py-3">
        <h3 class="text-primary text-center">Les bâtiments</h3>
        <div class="text-right">
            <a href="{{ path('place_building_new') }}" class="btn btn-success my-3"><i class="fas fa-edit">Nouveau batiment</i></a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for building in buildings %}
                <tr>
                    <td>{{ building.id }}</td>
                    <td>{{ building.libelle }}</td>
                    <td class="text-center">
                        <a href="{{ path('place_building_edit', {'id': building.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('place_building_show', {'id': building.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
