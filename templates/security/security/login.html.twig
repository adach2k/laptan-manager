{% extends "layout/connection.html.twig" %}


{% block title %} Authentification {% endblock %}

{% block body %}
	<style>.bg-login{background:no-repeat center url(img/stethoscop.png); background-size: cover;}</style>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-8 col-lg-10 col-md-9">
				<div class="card o-hidden border-0 shadow-lg my-5">
					<div class="card-body p-0">
						<div class="row">
							<div class="col-lg-6 d-none d-lg-block bg-login"></div>
							<div class="col-lg-6">
								<div class="p-5">
									<div class="text-center">
										<h1 class="h4 text-gray-900 mb-4">Authentifiez-vous <i class="fa fa-user-md" aria-hidden="true"></i></h1>
									</div>

									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									<form action="{{ path('app.login') }}" method="post">
										<div class="form-group">
											<label for="username">Username:</label>
											<input type="text" class="form-control" id="username" name="_username" placeholder="Entrer votre Pseudo" value="{{ last_username }}"/>
										</div>
										<div class="form-group">
											<label for="password">Password:</label>
											<input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe"/>
										</div>
										<div class="form-group">
											<div class="custom-control custom-checkbox small">
												<input type="checkbox" class="custom-control-input" id="customCheck">
												<label class="custom-control-label" for="customCheck">Se souvenir de moi</label>
											</div>
										</div>
										<hr>
										<button type="submit" class="btn btn-outline-primary">S'authentifier</button>
									</form>
									<hr>
									<div class="text-center">
										<a class="small" href="{{path('edit-password')}}">Mot de passe oubli√© ?</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}